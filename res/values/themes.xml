<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
           parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBarTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar"
           parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/orange_gradient</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTheme.ActionBar.Text</item>
        <item name="android:solidColor">@color/primary_light</item>
        <item name="android:icon">@drawable/logo</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar.Text"
           parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
     </style>
</resources>